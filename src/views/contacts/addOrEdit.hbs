


<div style="margin-top: 2.5em">
<h2 class="ui teal image header">
    <div class="content">
       <p>{{viewTitle}}</p>
    </div>
</h2>

    {{# if err }}
        {{# each err.errors }}

            <div class="ui error message">{{this.message}}</div>
        {{/each}}
    {{/if}}

<form class="ui form" action="/" method="post" autocomplete="off">
    <div class="ui stacked segment" style="max-width: 550px">

        <div class="field">
                <label>Full Name</label>
                <input type="text" name="fullName" placeholder="Full Name" value="{{contacts.fullName}}">
        </div>



        <div class="field">
                <label>Email</label>
                <input type="text" name="email" placeholder="Email" value="{{contacts.email}}">
        </div>



        <div class="field">
                <label>Mobile</label>
                <input type="text" name="mobile" placeholder="Mobile" value="{{contacts.mobile}}">
        </div>

        <div class="field">
                <label>City</label>
                <input type="text" name="city" placeholder="City" value="{{contacts.city}}">
        </div>

        <button class="ui primary button" type="submit">Submit</button>
    </div>


</form>

</div>